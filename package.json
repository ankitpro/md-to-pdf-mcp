  "keywords": [
    "mcp",
    "markdown",
    "pdf",
    "converter",
    "model-context-protocol",
    "document",
    "export",
    "mermaid",
    "diagrams",
    "flowchart",
    "cursor",
    "claude",
    "ai"
  ],
  "author": "ankitagarwalpro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ankitpro/md-to-pdf-mcp.git"
  },
  "homepage": "https://github.com/ankitpro/md-to-pdf-mcp#readme",
  "bugs": {
    "url": "https://github.com/ankitpro/md-to-pdf-mcp/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "highlight.js": "^11.10.0",
    "marked": "^15.0.0",
